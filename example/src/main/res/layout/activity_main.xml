<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/show_interstitial_ad"
                style="@style/button"
                android:text="@string/show_interstitial_ad" />

            <Button
                android:id="@+id/revoke_consent"
                style="@style/button"
                android:text="@string/revoke_consent" />

            <Button
                android:id="@+id/remove_ads"
                style="@style/button"
                android:text="@string/remove_ads" />

            <Button
                android:id="@+id/consume_purchase"
                style="@style/button"
                android:text="@string/consume_purchase" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/adContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>